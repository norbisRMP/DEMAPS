@{
    ViewBag.Title = "Pantalla Principal";
}

<div class="row">

    <div class="col-md-12">
        <div class="row">

            <a href="~/Denuncias/DenunciasRecibidas">
                <div class="col-md-3">
                    <div class="bg-info top_cards">
                        <div class="row icon_margin_left">

                            <div class="col-lg-5 icon_padd_left">
                                <div class="float-xs-left">
                                    <span class="fa-stack fa-sm">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-list fa-stack-1x fa-inverse text-primary sales_hover"></i>
                                    </span>
                                </div>
                            </div>


                            <div class="col-lg-7 icon_padd_right">
                                <div class="float-xs-right cards_content">
                                    <span class="number_val" id="sales_count"></span><i class="fa fa-long-arrow-up fa-2x"></i>
                                    <br />
                                    <span class="card_description">D. Recibidas</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </a>

            <a href="~/Denuncias/DenunciasInvestigacion">
                <div class="col-md-3">
                    <div class="bg-success top_cards">
                        <div class="row icon_margin_left">
                            <div class="col-lg-5 icon_padd_left">
                                <div class="float-xs-left">
                                    <span class="fa-stack fa-sm">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-eye fa-stack-1x fa-inverse text-success visit_icon"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-7 icon_padd_right">
                                <div class="float-xs-right cards_content">
                                    <span class="number_val" id="visitors_count"></span><i class="fa fa-long-arrow-up fa-2x"></i>
                                    <br />
                                    <span class="card_description">D. Investigación</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </a>

            <a href="~/Denuncias/DenunciasFalladas">
                <div class="col-md-3">
                    <div class="bg-danger top_cards">
                        <div class="row icon_margin_left">
                            <div class="col-lg-5 icon_padd_left">
                                <div class="float-xs-left">
                                    <span class="fa-stack fa-sm">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-close fa-stack-1x fa-inverse text-warning revenue_icon"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-7 icon_padd_right">
                                <div class="float-xs-right cards_content">
                                    <span class="number_val" id="subscribers_count"></span><i class="fa fa-long-arrow-down fa-2x"></i>
                                    <br />
                                    <span class="card_description">D. Falladas</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </a>

            <a href="~/Denuncias/DenunciasFinalizadas">
                <div class="col-md-3">
                    <div class="bg-primary top_cards">
                        <div class="row icon_margin_left">
                            <div class="col-lg-5 icon_padd_left">
                                <div class="float-xs-left">
                                    <span class="fa-stack fa-sm">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-check  fa-stack-1x fa-inverse text-mint sub"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-7 icon_padd_right">
                                <div class="float-xs-right cards_content">
                                    <span class="number_val" id="subscribers_count"></span><i class="fa fa-long-arrow-up fa-2x"></i>
                                    <br />
                                    <span class="card_description">D. Finalizadas </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               </a>

</div>
    </div>

</div>

<!-- ESTADISTICS CHARTS -->
<div class="row">
    <div class="col-lg-9 col-xs-12 m-t-25">
        <div class="card">

            <ul id="clothing-nav" class="nav nav-tabs" role="tablist">

                <li class="nav-item">
                    <a class="nav-link active" href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Denuncias Mensuales</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#hats" role="tab" id="hats-tab" data-toggle="tab" aria-controls="hats">Denuncias Semanales</a>
                </li>



            </ul>
            <div class="card-block">
                <div id="clothing-nav-content" class="tab-content">

                    <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                        <div id="area-chart" class="flotChart3"></div>
                    </div>

                    <div role="tabpanel" class="tab-pane fade" id="hats" aria-labelledby="hats-tab">


                        <div class="form-group float-xs-right">
                            <span class="live_switch">Live</span>
                            <input type="checkbox" id="toggle_real" name="my-checkbox"
                                   data-size="large" checked>
                        </div>
                        <div id="realtime" class="flotChart4 float-xs-right"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-lg-3 col-xs-12 m-t-25 md_align_section">
        <div class="card">
            <div class="card-header bg-white">
               Porcentaje de Denuncias
            </div>
            <div class="card-body">
                <div class="task-item">

                    Alimentos
                    <span class="float-xs-right text-muted progress-info">52%</span>
                    <div id="progress-bar">
                        <progress class="progress progress-danger" value="52"
                                  max="100"></progress>
                    </div>
                </div>
                <div class="task-item">
                    Medicamentos
                    <span class="float-xs-right text-muted progress-primary">80%</span>
                    <div id="progress-bar1">
                        <progress class="progress progress-warning" value="80"
                                  max="100"></progress>
                    </div>
                </div>
                <div class="task-item">
                    Otros
                    <span class="float-xs-right text-muted progress-warning">25%</span>
                    <div id="progress-bar2">
                        <progress class="progress progress-success" value="25"
                                  max="100"></progress>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>


