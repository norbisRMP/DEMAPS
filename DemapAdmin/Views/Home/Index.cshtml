<script>
  
    if(@ViewBag.TotalPendientes> 0) {

        var cantidaDenuncias = @ViewBag.TotalPendientes;

        $(function () {
            new PNotify({
                title: 'Alerta de Denuncia',
                text: 'Hay '+cantidaDenuncias+' denuncia(s) pendiente (s)',
                type: 'error',
                after_init: function (notice) {
                    notice.attention('rubberBand');
                }
            });
        });


    }

</script>