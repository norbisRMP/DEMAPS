<style>
    /*.ocultar{
        display:none;
    }*/
</style>

@Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control ocultar" } })



    <script src="https://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>


<script>

    function GetEvidencias() {
      
        var DenunciaID = $("#Id").val()
    
        if(DenunciaID != ""){

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetEvidencias", "SeguimientoDenuncias")',
                dataType: 'json',
                data: { DenunciaID: DenunciaID },
                success: function (response) {

                    if (response) {
             
                        $("#ListadoEvidencias").html("");
                        
                        $.each(response, function (index, value) {
   
                            $("#ImagenPrincipal").html("<img src='" + value + "' class='admin_img_width'>");
                            var imagen = "<div class='thumb_zoom zoom'><img src='" + value + "' class='img-rounded' alt='friend'> </div>";

                            $("#ListadoEvidencias").append(imagen);
                        });
                    }


                }, error: function () {

                    alert("Favor contactar al Administrador");
                }
            });

        }else{
            alert("No existen evidencias registradas!");
      }

    }
    GetEvidencias();

</script>